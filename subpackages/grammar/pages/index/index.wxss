.page {
  height: 100vh;
  box-sizing: border-box;
  background: #f8fafc;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.header {
  flex: none;
  padding: 0 32rpx 12rpx;
  z-index: 10;
}

.header-row {
  display: flex;
  align-items: center;
}

.back-btn-simple {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  margin-left: -16rpx;
  border-radius: 50%;
  background: #f1f5f9;
}

.back-btn-simple:active {
  background: #e2e8f0;
}

.back-btn-simple .back-icon {
  font-size: 40rpx;
  color: #334155;
  line-height: 1;
  padding-bottom: 4rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.header-sub {
  margin-top: 4rpx;
  display: block;
  font-size: 24rpx;
  color: #64748b;
}

.switch-course-btn {
  padding: 8rpx 20rpx;
  background: #f1f5f9;
  border-radius: 30rpx;
  color: #475569;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  transition: all 0.2s;
}

.switch-course-btn:active {
  background: #e2e8f0;
  transform: scale(0.98);
}

.content {
  display: flex;
  flex: 1;
  height: 0;
  position: relative;
}

/* 书籍风格侧边栏 */
.sidebar {
  width: 320rpx; /* 加宽侧边栏，容纳更多文字 */
  background: #f8fafc; /* 浅灰白背景 */
  box-sizing: border-box;
  transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1); /* 更自然的弹簧效果 */
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  z-index: 100;
  overflow: hidden;
  box-shadow: 8rpx 0 24rpx rgba(0,0,0,0.06);
  transform: translateX(0);
  border-radius: 0 24rpx 24rpx 0; /* 右侧圆角 */
}

.sidebar.collapsed {
  transform: translateX(-100%);
  width: 320rpx; 
}

/* 固定宽度的内部容器 */
.sidebar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

/* 遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(30,41,59,0.2); /* 深蓝灰色半透明 */
  backdrop-filter: blur(4px); /* 毛玻璃效果 */
  z-index: 90;
  transition: opacity 0.3s;
}

.sidebar-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx; /* 更高的高度 */
  padding: 0 32rpx;
  box-sizing: border-box;
  background: transparent;
  color: #334155;
}

/* 悬浮目录按钮（固定在右上角） */
.collapse-trigger-fixed {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 72rpx;
  height: 72rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 80;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  cursor: pointer;
  border: 1rpx solid #f1f5f9;
}

.collapse-trigger-fixed:active {
  background: #f8fafc;
  transform: scale(0.95);
}

.menu-icon {
  width: 32rpx;
  height: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-icon .line {
  width: 100%;
  height: 4rpx;
  background: #64748b;
  border-radius: 2rpx;
}

.sidebar-title {
  font-size: 34rpx;
  color: #1e293b;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.sidebar-close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e2e8f0;
  border-radius: 50%;
  transition: all 0.2s;
}

.sidebar-close-btn:active {
  background: #cbd5e1;
  transform: rotate(90deg);
}

.sidebar-close-btn text {
  font-size: 32rpx;
  color: #64748b;
  font-weight: bold;
}

.sidebar-list {
  flex: 1;
  padding: 10rpx 20rpx 40rpx; /* 内缩，留出气泡边距 */
  box-sizing: border-box;
}

/* 气泡式目录项 */
.dir-item {
  position: relative;
  padding: 24rpx 24rpx;
  margin-bottom: 16rpx;
  color: #475569;
  background: #ffffff;
  border-radius: 20rpx; /* 大圆角 */
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

/* 选中项 - 高亮气泡 */
.dir-item.active {
  background: #eef2ff; /* 浅靛蓝背景 */
  color: #4f46e5; /* 深靛蓝文字 */
  font-weight: 600;
  border-color: #c7d2fe;
  box-shadow: 0 4rpx 12rpx rgba(99,102,241,0.08);
  transform: scale(1.02); /* 轻微放大 */
}

/* 选中项的左侧指示条 */
.dir-item.active::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #4f46e5;
}

.dir-item:active {
  transform: scale(0.98);
}

.dir-text {
  font-size: 28rpx;
  line-height: 1.5;
  padding-left: 10rpx; /* 为指示点留空 */
}

.main {
  flex: 1;
  padding: 24rpx 32rpx 40rpx;
  box-sizing: border-box;
  background: #ffffff;
  position: relative;
}

.main.full {
  padding: 24rpx 40rpx 40rpx;
}

/* 纸张效果 */
.card {
  background: #ffffff;
  min-height: 100%;
}

/* New Detail Layout Styles */

.detail-header {
  margin-bottom: 40rpx;
}

.detail-top-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.tags-row {
  display: flex;
  gap: 12rpx;
}

.tag-pill {
  font-size: 22rpx;
  font-weight: 600;
  color: #6366f1;
  background: #eef2ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.tag-pill.secondary {
  color: #059669;
  background: #ecfdf5;
}

.lesson-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.lesson-num {
  font-size: 24rpx;
  font-weight: 600;
  color: #94a3b8;
}

.global-id {
  font-size: 20rpx;
  color: #cbd5e1;
}

.grammar-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 24rpx;
  line-height: 1.2;
}

.divider {
  height: 2rpx;
  background: #f1f5f9;
  width: 100%;
}

.section-container {
  margin-bottom: 48rpx;
}

.section-label {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #64748b;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
  text-transform: uppercase;
}

/* Meaning Card Styles */
.meaning-card {
  background: #ffffff;
  border: 2rpx solid #eef2ff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.1);
  position: relative;
  overflow: hidden;
}

/* Left indigo strip */
.meaning-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 40rpx;
  bottom: 40rpx;
  width: 8rpx;
  background: #e0e7ff;
  border-radius: 0 8rpx 8rpx 0;
}

.meaning-content {
  margin-bottom: 32rpx;
  padding-left: 24rpx;
}

.meaning-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #334155;
  margin-bottom: 24rpx;
  text-align: justify;
  font-weight: 500;
}

.meaning-text:last-child {
  margin-bottom: 0;
}

/* Info Box Styles */
.info-box {
  background: #ffffff;
  border: 2rpx solid #eef2ff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
  margin-left: 12rpx; /* Align slightly indented */
  box-shadow: 0 2rpx 12rpx rgba(148, 163, 184, 0.05);
}

.info-badge {
  background: #6366f1;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 800;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  height: fit-content;
  letter-spacing: 1rpx;
}

.info-content {
  flex: 1;
}

.info-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #475569; /* Slate 600 */
  margin-bottom: 8rpx;
}

.info-text:last-child {
  margin-bottom: 0;
}

/* Example Section Styles */
.section-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-count {
  font-size: 22rpx;
  font-weight: 700;
  color: #94a3b8;
  letter-spacing: 1rpx;
  text-transform: uppercase;
}

.example-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.example-card {
  background: #ffffff;
  border: 2rpx solid #f1f5f9;
  border-radius: 20rpx;
  padding: 32rpx;
  /* box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.05); */
  transition: background-color 0.2s;
}

.example-card:active {
  background-color: #f8fafc;
}

.ex-kor-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.audio-icon {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
  opacity: 0.6;
  margin-top: -6rpx; /* Align with text */
  padding: 10rpx; /* Increase clickable area visually */
  box-sizing: border-box;
}

.example-card:active .audio-icon {
  opacity: 1;
  transform: scale(1.1);
  transition: all 0.2s;
}

.ex-num {
  font-size: 32rpx;
  font-weight: 800;
  color: #1e293b;
  min-width: 30rpx;
}

.ex-kor {
  font-size: 32rpx;
  font-weight: 800;
  color: #1e293b;
  line-height: 1.5;
  flex: 1;
}

.ex-trans-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding-left: 46rpx; /* Align with text start (num width + gap) */
}

.ex-dash {
  width: 24rpx;
  height: 2rpx;
  background: #cbd5e1;
}

.ex-trans {
  font-size: 28rpx;
  color: #64748b;
  font-weight: 500;
  line-height: 1.5;
}

/* 覆盖旧样式 */
.card-title, .meta, .body {
  display: none;
}

.empty {
  padding: 40rpx 0;
  color: #64748b;
  text-align: center;
}
