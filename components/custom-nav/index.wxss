.custom-nav {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background-color: #ffffff;
  transition: background-color 0.3s;
}

.custom-nav.dark {
  background-color: #020617; /* slate-950 */
}

.nav-content {
  position: absolute;
  left: 16px;
  right: 100px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.nav-left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-width: 0;
}

.nav-back {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
  background: rgba(241, 245, 249, 0.9);
  flex-shrink: 0;
}

.custom-nav.dark .nav-back {
  background: rgba(30, 41, 59, 0.9);
}

.nav-back:active {
  opacity: 0.85;
}

.back-icon {
  font-size: 22px;
  line-height: 1;
  color: #334155;
  font-weight: 800;
}

.custom-nav.dark .back-icon {
  color: #e2e8f0;
}

.nav-title {
  font-size: 16px;
  font-weight: 700;
  color: #1e293b;
  line-height: 1.2;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.custom-nav.dark .nav-title {
  color: #f8fafc; /* slate-50 */
}

.nav-subtitle {
  font-size: 11px;
  color: #64748b;
  line-height: 1.2;
  margin-top: 2px;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.custom-nav.dark .nav-subtitle {
  color: #94a3b8; /* slate-400 */
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-shrink: 0;
}

.custom-nav.compact .nav-right {
  gap: 8px;
}

.custom-nav.compact .nav-title {
  font-size: 14px;
}

.custom-nav.compact .nav-subtitle {
  font-size: 10px;
}

.custom-nav.compact .checkin-pill,
.custom-nav.compact .progress-pill {
  padding: 3px 8px;
  font-size: 11px;
  height: 22px;
}

.custom-nav.compact .settings-btn {
  width: 30px;
  height: 30px;
}

.custom-nav.compact .settings-icon {
  font-size: 17px;
}

.progress-pill {
  background-color: #f1f5f9; /* Slate 100 */
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 12px;
  color: #475569;
  font-weight: 600;
  display: flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}

.checkin-pill {
  background-color: #e0e7ff;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 12px;
  color: #3730a3;
  font-weight: 700;
  display: flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}

.checkin-pill:active {
  opacity: 0.85;
}

.custom-nav.dark .checkin-pill {
  background-color: rgba(99, 102, 241, 0.18);
  color: #c7d2fe;
}

.custom-nav.dark .progress-pill {
  background-color: #1e293b; /* slate-800 */
  color: #cbd5e1; /* slate-300 */
}

.settings-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s;
  position: relative;
}

.settings-tooltip {
  position: absolute;
  top: 40px;
  right: -12px;
  background-color: #1e293b;
  color: #ffffff;
  padding: 6px 10px;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 500;
  white-space: nowrap;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  z-index: 1100;
  opacity: 0;
  transform: translateY(-4px);
  transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
  pointer-events: none;
  visibility: hidden;
}

.settings-tooltip.visible {
  opacity: 1;
  transform: translateY(0);
  visibility: visible;
}

.tooltip-arrow {
  position: absolute;
  top: -4px;
  right: 24px;
  width: 8px;
  height: 8px;
  background-color: #1e293b;
  transform: rotate(45deg);
}

.custom-nav.dark .settings-tooltip {
  background-color: #cbd5e1;
  color: #0f172a;
}

.custom-nav.dark .tooltip-arrow {
  background-color: #cbd5e1;
}

.settings-btn:active {
  background-color: #f1f5f9;
}

.custom-nav.dark .settings-btn:active {
  background-color: #1e293b;
}

.settings-icon {
  width: 22px;
  height: 22px;
  background-color: #64748b;
  -webkit-mask-image: url("data:image/svg+xml;base64,");
  mask-image: url("data:image/svg+xml;base64,");
  -webkit-mask-size: contain;
  mask-size: contain;
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-position: center;
  mask-position: center;
}

.custom-nav.dark .settings-icon {
  background-color: #cbd5e1;
}
