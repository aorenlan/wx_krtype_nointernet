page {
  background-color: #f0f4f8; /* Softer background */
}

/* Custom Navigation */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  display: flex;
  align-items: flex-start; /* vertical alignment handled by inner items */
  background-color: transparent; /* Or #f0f4f8 if we want opaque */
}

.back-btn {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 5rpx solid #334155;
  border-bottom: 5rpx solid #334155;
  transform: rotate(45deg);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  flex: 1;
  text-align: center;
  margin-right: 80rpx; /* Balance back button */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* padding-top set inline */
  min-height: 100vh;
  box-sizing: border-box;
}

/* Clock Wrapper & Face */
.clock-wrapper {
  margin-bottom: 50rpx;
  padding: 20rpx;
  background: white;
  border-radius: 50%;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.05);
}

.clock-face {
  width: 540rpx; /* Reduced from 600rpx to be "lower" / smaller if needed, but user said "lower" position. Let's keep size but margin helps. Actually user said "表盘低一些" (position lower). */
  height: 540rpx;
  border-radius: 50%;
  background-color: #ffffff;
  position: relative;
  border: 4rpx solid #e2e8f0; 
}

/* Markers (ticks) */
.marker {
    position: absolute;
    width: 4rpx;
    height: 10rpx;
    background-color: #cbd5e1;
    left: 50%;
    top: 50%;
    margin-left: -2rpx;
    margin-top: -5rpx;
}
.marker-main {
    width: 6rpx;
    height: 16rpx;
    background-color: #94a3b8;
    margin-left: -3rpx;
    margin-top: -8rpx;
}

/* Numbers */
.number {
  position: absolute;
  text-align: center;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
  color: #64748b;
  font-size: 32rpx;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
}

/* Hands */
.hand {
  position: absolute;
  bottom: 50%;
  left: 50%;
  transform-origin: bottom center;
  border-radius: 10rpx 10rpx 0 0;
  z-index: 10;
  box-shadow: 0 4rpx 6rpx rgba(0,0,0,0.1);
}

.hour-hand {
  width: 16rpx;
  height: 130rpx; /* Adjusted for smaller face */
  background-color: #334155; /* Dark slate */
  margin-left: -8rpx;
  border-radius: 12rpx;
}

.minute-hand {
  width: 10rpx;
  height: 200rpx; /* Adjusted for smaller face */
  background-color: #f87171; /* Softer red */
  margin-left: -5rpx;
  border-radius: 8rpx;
}

/* Center Dots */
.center-dot {
  width: 24rpx;
  height: 24rpx;
  background-color: #334155;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
}
.center-dot-inner {
    width: 8rpx;
    height: 8rpx;
    background-color: #ffffff;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 21;
}

/* Info Card */
.info-card {
  width: 86%;
  background: white;
  padding: 40rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.digital-time {
  font-size: 80rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24rpx;
  font-family: 'Courier New', Courier, monospace;
  letter-spacing: 4rpx;
  background: #f1f5f9;
  padding: 10rpx 40rpx;
  border-radius: 20rpx;
}

.korean-time-container {
    background-color: #f8fafc;
    padding: 20rpx 30rpx;
    border-radius: 20rpx;
    width: 90%;
    margin-bottom: 30rpx;
    min-height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx dashed #e2e8f0;
}

.korean-time {
  font-size: 36rpx;
  color: #6366f1; /* Indigo */
  font-weight: bold;
  transition: all 0.3s ease;
  text-align: center;
}

.hidden-blur {
    filter: blur(12rpx);
    opacity: 0.2;
    user-select: none;
}

/* Control Row */
.control-row {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-top: 10rpx;
}

.btn-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    background: #eef2ff;
    color: #4f46e5;
    padding: 16rpx 24rpx;
    border-radius: 20rpx;
    font-size: 28rpx;
    font-weight: 600;
    transition: all 0.2s;
}

.btn-icon:active {
    transform: scale(0.96);
    background: #e0e7ff;
}
