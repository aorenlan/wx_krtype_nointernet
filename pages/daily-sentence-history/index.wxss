.page {
  height: 100vh;
  background: #f8f9fc;
  overflow: hidden;
}

.empty {
  height: calc(100vh - 120px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 24px;
  box-sizing: border-box;
  color: #64748b;
}

.empty-title {
  font-size: 18px;
  font-weight: 800;
  color: #0f172a;
}

.empty-sub {
  margin-top: 8px;
  font-size: 13px;
  color: #64748b;
}

.list {
  height: calc(100vh - 60px);
  padding: 12px 14px 24px;
  box-sizing: border-box;
}

.item {
  background: #ffffff;
  border-radius: 14px;
  padding: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  box-shadow: 0 8px 24px rgba(15, 23, 42, 0.06);
}

.item:active {
  transform: scale(0.99);
}

.item-main {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.item-source {
  font-size: 15px;
  font-weight: 800;
  color: #0f172a;
}

.item-date {
  font-size: 12px;
  color: #64748b;
}

.item-arrow {
  font-size: 20px;
  color: #94a3b8;
  line-height: 1;
}

.footer {
  padding: 12px 0 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-text {
  font-size: 12px;
  color: #94a3b8;
  font-weight: 700;
}
