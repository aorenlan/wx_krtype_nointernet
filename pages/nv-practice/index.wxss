.setting-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.setting-row text {
  font-size: 13px;
  color: #1e293b;
}

.dark-mode .setting-row text { color: #e2e8f0; }

.setting-value {
  font-weight: 600;
  color: #4a4a4a !important;
}

.slider-container {
  background-color: #f8fafc;
  padding: 12px;
  border-radius: 12px;
  margin-top: 8px;
}

.dark-mode .slider-container { background-color: #0f172a; }

.sub-label {
  font-size: 12px !important;
  color: #64748b !important;
}

.mt-4 { margin-top: 16px; }

.check-icon {
  font-size: 14px;
  font-weight: 700;
}

.lesson-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.lesson-item {
  display: flex;
  justify-content: space-between;
