.dark-mode .toggle-btn text { color: #e2e8f0; }

.toggle-indicator {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 2px solid #cbd5e1;
}

.toggle-btn.active .toggle-indicator {
