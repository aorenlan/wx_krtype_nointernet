  from { opacity: 0; transform: scale(0.5) rotate(0deg); }
  to { opacity: 0.4; transform: scale(1) rotate(var(--rotate, 0deg)); }
}

.nagging-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  text-align: center;
  width: 80%;
