/* Global Reset */
page {
  background-color: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  height: 100%;
}

.container {
  padding: 24px;
  padding-bottom: calc(24px + 58px + env(safe-area-inset-bottom));
  box-sizing: border-box;
  height: 100%;
  /* Reset any flex centering from app.wxss and use flex column */
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  text-align: left;
}

.page-title {
  font-size: 24px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 24px;
}

.section-label {
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  color: #94a3b8;
  margin-bottom: 16px;
  letter-spacing: 0.05em;
}

/* Card Styles */
.card {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  border: 1px solid #e2e8f0;
  box-shadow: 0 1px 2px rgba(0,0,0,0.02);
  transition: all 0.2s ease;
}

.card:active {
  transform: scale(0.99);
}

.night-mode-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.card-left {
  display: flex;
  align-items: center;
}

.icon-sun {
  margin-right: 12px;
  font-size: 20px;
}

.card-text {
  font-size: 14px;
  font-weight: 600;
  color: #334155;
}

/* Book List Styles */
.book-card {
  position: relative;
  overflow: hidden;
}

.setting-section {
  margin-bottom: 24px;
}

.section-title {
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  color: #94a3b8;
  margin-bottom: 12px;
  letter-spacing: 0.05em;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14px 16px;
  background: #f8f9fc;
  border-radius: 12px;
  font-size: 15px;
  border: 1px solid #e2e8f0;
}

.picker-label {
  font-size: 13px;
  color: #64748b;
  font-weight: 600;
}

.picker-right {
  display: flex;
  align-items: center;
  gap: 8px;
}

.picker-value {
  font-size: 13px;
  color: #1e293b;
  font-weight: 700;
}

.picker-arrow {
  color: #94a3b8;
  font-size: 16px;
  line-height: 1;
}

.topik-session {
  margin-top: 12px;
}

.topik-session-scroll {
  width: 100%;
}

.topik-session-row {
  display: flex;
  gap: 10px;
  padding: 6px 0;
}

.topik-session-chip {
  padding: 8px 12px;
  border-radius: 999px;
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  color: #475569;
  font-size: 12px;
  white-space: nowrap;
}

.topik-session-chip.active {
  background: #fad0c4;
  border-color: #fad0c4;
  color: #4a4a4a;
}

.mode-toggles {
  display: flex;
  gap: 12px;
}

.mode-btn {
  flex: 1;
  background-color: #f8fafc;
  border: 2px solid #e2e8f0;
  border-radius: 16px;
  padding: 10px 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.mode-btn.active {
  background-color: #fad0c4;
  border-color: #fad0c4;
}

.mode-btn text:first-child {
  font-size: 12px;
  font-weight: 700;
  color: #475569;
}

.mode-btn.active text:first-child {
  color: #4a4a4a;
}

.mode-btn-sub {
  font-size: 10px;
  color: #94a3b8;
}

.setting-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.setting-row text {
  font-size: 13px;
  color: #1e293b;
}

.setting-value {
  font-weight: 700;
  color: #4a4a4a;
}

.slider-container {
  background-color: #f8fafc;
  padding: 12px;
  border-radius: 12px;
  margin-top: 8px;
  border: 1px solid #e2e8f0;
}

.sub-label {
  font-size: 12px;
  color: #64748b;
}

.content-toggles {
  display: flex;
  gap: 12px;
}

.toggle-btn {
  flex: 1;
  background-color: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.toggle-btn.active {
  background-color: #fad0c4;
  border-color: #fad0c4;
}

.toggle-btn text {
  font-size: 13px;
  font-weight: 700;
  color: #475569;
}

.toggle-indicator {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 2px solid #cbd5e1;
}

.toggle-btn.active .toggle-indicator {
  background-color: #fad0c4;
  border-color: #fad0c4;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f1f5f9;
}

.setting-item:last-child {
  border-bottom: 0;
}

.book-card.active {
  border-color: #c7d2fe;
  background-color: #eef2ff;
}

.active-bar {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 4px;
  background-color: #4f46e5;
}

.book-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.book-info {
  display: flex;
  flex-direction: column;
}

.book-name {
  font-size: 16px;
  font-weight: 600;
  color: #334155;
  margin-bottom: 4px;
}

.book-name.active-text {
  color: #4f46e5;
  font-weight: 700;
}

.book-desc {
  font-size: 12px;
  color: #94a3b8;
}

.book-desc-row {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #94a3b8;
}

.icon-headphones {
  margin-right: 4px;
  font-size: 12px;
}

.arrow-icon {
  color: #cbd5e1;
  font-size: 20px;
}

/* Action Cards */
.action-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-circle {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.icon-circle.green {
  background-color: #ecfdf5;
}

.icon-circle.green .action-icon {
  color: #10b981;
}

.icon-circle.blue {
  background-color: #eff6ff;
}

.icon-circle.blue .action-icon {
  color: #3b82f6;
}

.action-icon {
  font-size: 16px;
}

.footer-version {
  text-align: center;
  font-size: 10px;
  color: #cbd5e1;
  margin-top: 24px;
  padding-bottom: 24px;
}

/* FILTERS VIEW STYLES */
.header-bar {
  padding-bottom: 16px;
  margin-bottom: 16px;
  border-bottom: 1px solid #f1f5f9;
}

.back-btn {
  display: flex;
  align-items: center;
  color: #64748b;
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 16px;
}

.back-btn .icon {
  font-size: 20px;
  margin-right: 4px;
  margin-top: -2px;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.category-title {
  font-size: 20px;
  font-weight: 700;
  color: #1e293b;
}

.category-count {
  font-size: 12px;
  color: #94a3b8;
}

.filter-tabs {
  display: flex;
  background: #f1f5f9;
  padding: 4px;
  border-radius: 12px;
  margin-bottom: 24px;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 8px;
  font-size: 14px;
  color: #64748b;
  border-radius: 8px;
}

.tab.active {
  background: white;
  color: #6366f1;
  font-weight: 600;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.filter-content {
  flex: 1;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
  padding-bottom: 40px;
}

.grid-item {
  background: white;
  border-radius: 12px;
  padding: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #f1f5f9;
}

.grid-item.active {
  background-color: #e0e7ff;
  border-color: #6366f1;
}

.grid-item.active-all {
  background-color: #6366f1;
  border-color: #6366f1;
}

.grid-item.active-all .grid-main {
  color: white;
}

.grid-item.active-all .grid-sub {
  color: #e0e7ff;
}

.grid-main {
  font-size: 16px;
  font-weight: 700;
  color: #334155;
}

.grid-item.active .grid-main {
  color: #4338ca;
}

.grid-sub {
  font-size: 10px;
  color: #94a3b8;
}

/* IMPORT LIST STYLES */
.nav-header {
  display: flex;
  align-items: center;
  margin-bottom: 24px;
}

.back-arrow {
  font-size: 24px;
  color: #64748b;
  margin-right: 4px;
  margin-top: -2px;
}

.back-text {
  font-size: 14px;
  font-weight: 600;
  color: #64748b;
}

.page-title-large {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24px;
  font-size: 24px;
  font-weight: 800;
  color: #1e293b;
}

.page-count {
  font-size: 14px;
  font-weight: 500;
  color: #94a3b8;
}

/* TOP CARDS GRID (3 Columns) */
.top-cards-grid {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  margin-bottom: 32px;
}

.action-card-column {
  flex: 1;
  background: white;
  border-radius: 16px;
  padding: 16px 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px dashed #e2e8f0;
  min-height: 120px;
  text-align: center;
  position: relative;
}

.action-card-column:active {
  background-color: #f8fafc;
}

.icon-circle-large {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12px;
}

.blue-bg { background: #eff6ff; }
.yellow-bg { background: #fef9c3; }
.gray-bg { background: #f1f5f9; }

.plus-icon-large {
  color: #3b82f6;
  font-size: 24px;
  font-weight: 400;
}

.lightning-icon {
    font-size: 24px;
    color: #eab308;
}

.camera-icon {
  font-size: 22px;
  color: #64748b;
}

.text-group {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.action-text {
  font-size: 13px;
  font-weight: 600;
  color: #334155;
  line-height: 1.4;
}

.action-subtext {
    font-size: 9px;
    color: #94a3b8;
    margin-top: 2px;
    font-weight: 400;
    line-height: 1.2;
}

/* SMART IMPORT VIEW STYLES */
.smart-intro {
    font-size: 14px;
    color: #64748b;
    margin-bottom: 20px;
    line-height: 1.6;
}

.smart-textarea {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 16px;
    font-size: 15px;
    color: #334155;
    width: 100%;
    height: 300px;
    box-sizing: border-box;
    margin-bottom: 24px;
}

.btn-smart-action {
    background: #6366f1;
    color: white;
    border-radius: 12px;
    padding: 16px;
    font-size: 16px;
    font-weight: 600;
    text-align: center;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px -1px rgba(99, 102, 241, 0.3);
}

.btn-smart-action:active {
    transform: scale(0.98);
    opacity: 0.9;
}

/* Dark Mode Overrides for Grid */
.dark-mode .action-card-column {
    background-color: #1e293b;
    border-color: #334155;
}

.dark-mode .blue-bg { background: rgba(59, 130, 246, 0.2); }
.dark-mode .purple-bg { background: rgba(168, 85, 247, 0.2); }
.dark-mode .gray-bg { background: rgba(148, 163, 184, 0.2); }

.dark-mode .action-text { color: #f1f5f9; }

.list-container {
  padding-bottom: 40px;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-info {
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 16px;
  font-weight: 600;
  color: #334155;
  margin-bottom: 4px;
}

.item-meta {
  font-size: 12px;
  color: #94a3b8;
}

.item-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8fafc;
  border-radius: 8px;
  margin-left: 8px;
  color: #64748b;
  font-size: 14px;
}

.action-icon.delete {
  background: #fef2f2;
  color: #ef4444;
}

.card-text-col {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 14px;
  font-weight: 700;
  color: #334155;
  line-height: 1.2;
}

.card-subtitle {
  font-size: 12px;
  color: #94a3b8;
  margin-top: 2px;
}

.card-hint {
  font-size: 11px;
  color: #94a3b8;
  margin-top: 4px;
}

.item-actions.mistake-remove {
  width: 32px;
  height: 32px;
  justify-content: center;
  background: #fef2f2;
  border-radius: 8px;
}

.remove-x {
  color: #ef4444;
  font-size: 18px;
  font-weight: 700;
  line-height: 1;
}

.empty-state {
  text-align: center;
  padding: 40px 0;
}

.empty-text {
  font-size: 14px;
  color: #cbd5e1;
}

/* IMPORT FORM STYLES */
.form-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-group {
  margin-bottom: 24px;
  display: flex;
  flex-direction: column;
}

.form-group.flex-1 {
  flex: 1;
}

.label {
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  color: #64748b;
  margin-bottom: 8px;
}

.sub-label {
  font-weight: 400;
  text-transform: none;
  opacity: 0.7;
}

.input {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 12px;
  font-size: 16px;
  color: #334155;
}

.textarea {
  background: transparent;
  border: none;
  padding: 12px;
  font-size: 14px;
  color: #334155;
  flex: 1;
  width: auto;
  line-height: 1.6;
  font-family: monospace;
  position: relative;
  z-index: 1;
}

.textarea-wrap {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  flex: 1;
  display: flex;
  position: relative;
}

.fake-placeholder {
  position: absolute;
  left: 12px;
  right: 12px;
  top: 12px;
  z-index: 0;
}

.fake-placeholder-line {
  font-size: 14px;
  line-height: 1.6;
  font-family: monospace;
  color: #cbd5e1;
  word-break: break-word;
  overflow-wrap: break-word;
}

.textarea-placeholder {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-wrap: break-word;
}

.form-actions {
  padding-top: 16px;
  padding-bottom: 40px;
}

.btn-primary-large {
  background: #3b82f6;
  color: white;
  border-radius: 16px;
  padding: 16px;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.save-icon {
  margin-right: 8px;
}

/* Suggestion Box */
.suggestion-box {
  margin-top: 12px;
  background: white;
  border-radius: 12px;
  border: 1px solid #e2e8f0;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  animation: slideIn 0.2s ease-out;
}

@keyframes slideIn {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}

.suggestion-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: #f8fafc;
  border-bottom: 1px solid #e2e8f0;
}

.suggestion-title {
  font-weight: 700;
  color: #334155;
}

.suggestion-close {
  color: #94a3b8;
  font-size: 20px;
  padding: 4px;
}

.suggestion-list {
  padding: 8px;
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-radius: 8px;
  margin-bottom: 4px;
}

.suggestion-item:active {
  background-color: #f1f5f9;
}

.suggestion-index {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #e2e8f0;
  color: #64748b;
  font-size: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
}

.suggestion-text {
  color: #334155;
  font-size: 14px;
}

/* Dark Mode Overrides */
.dark-mode {
  background-color: #0f172a;
  color: #f1f5f9;
}

.dark-mode .card,
.dark-mode .action-card-large,
.dark-mode .input,
.dark-mode .textarea,
.dark-mode .suggestion-box,
.dark-mode .grid-item {
  background-color: #1e293b;
