/* Form Styles */
.form-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form-group {
  margin-bottom: 24px;
  display: flex;
  flex-direction: column;
}

.form-group.flex-1 {
  flex: 1;
  min-height: 0;
}

.label {
  font-size: 14px;
  font-weight: 600;
  color: #334155;
  margin-bottom: 8px;
}

.sub-label {
  font-size: 12px;
  font-weight: 400;
  color: #94a3b8;
}

.input {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 12px;
  font-size: 16px;
  color: #1e293b;
}

.textarea-wrap {
  flex: 1;
  position: relative;
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  overflow: hidden;
}

.textarea {
  width: 100%;
  height: 100%;
  padding: 12px;
  font-size: 16px;
  color: #1e293b;
  line-height: 1.6;
  box-sizing: border-box;
}

.fake-placeholder {
  position: absolute;
  top: 12px;
  left: 12px;
  pointer-events: none;
  opacity: 0.4;
}

.fake-placeholder-line {
  font-size: 16px;
  color: #94a3b8;
  line-height: 1.6;
}

.form-actions {
  margin-top: auto;
  padding-top: 16px;
}

.btn-primary-large {
  background: #3b82f6;
  color: white;
  border-radius: 12px;
  padding: 16px;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.save-icon {
  margin-right: 8px;
}

/* Suggestion Box */
.suggestion-box {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-top: 1px solid #e2e8f0;
  box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1);
  border-radius: 0 0 8px 8px;
  z-index: 100;
  max-height: 200px;
  overflow-y: auto;
}

.suggestion-header {
  padding: 8px 12px;
  background: #f8fafc;
  border-bottom: 1px solid #e2e8f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.suggestion-title {
  font-weight: 600;
  color: #3b82f6;
  font-size: 14px;
}

.suggestion-close {
  color: #94a3b8;
  font-size: 18px;
  padding: 0 4px;
}

.suggestion-list {
  padding: 0;
}

.suggestion-item {
  padding: 10px 12px;
  border-bottom: 1px solid #f1f5f9;
  display: flex;
  align-items: flex-start;
}

.suggestion-item:active {
  background: #f8fafc;
}

.suggestion-index {
  background: #eff6ff;
  color: #3b82f6;
  font-size: 11px;
  width: 18px;
  height: 18px;
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8px;
  flex-shrink: 0;
  margin-top: 2px;
}

.suggestion-text {
  font-size: 14px;
  color: #334155;
  line-height: 1.4;
}

/* Smart Import Styles */
.smart-intro {
  font-size: 14px;
  color: #64748b;
  margin-bottom: 16px;
  line-height: 1.5;
}

.smart-textarea {
  width: 100%;
  height: 200px;
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  padding: 16px;
  font-size: 15px;
  color: #1e293b;
  box-sizing: border-box;
  margin-bottom: 24px;
}

.btn-smart-action {
  background: #eab308;
  color: white;
  border-radius: 12px;
  padding: 16px;
  font-size: 16px;
  font-weight: 700;
  text-align: center;
  box-shadow: 0 4px 6px -1px rgba(234, 179, 8, 0.2);
}

.btn-smart-action:active {
  transform: scale(0.98);
}
