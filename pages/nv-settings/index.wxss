.dark-mode .action-text,
.dark-mode .item-name,
.dark-mode .suggestion-title,
.dark-mode .suggestion-text,
.dark-mode .grid-main {
  color: #f1f5f9;
}

.dark-mode .section-label,
.dark-mode .book-desc,
.dark-mode .book-desc-row,
.dark-mode .category-count,
.dark-mode .item-meta,
.dark-mode .suggestion-close,
.dark-mode .grid-sub {
  color: #94a3b8;
}

.dark-mode .filter-tabs {
  background-color: #1e293b;
}

.dark-mode .tab {
  color: #94a3b8;
}

.dark-mode .tab.active {
  background-color: #334155;
  color: #818cf8;
}

.dark-mode .suggestion-header {
  background-color: #0f172a;
  border-color: #334155;
}

.dark-mode .suggestion-index {
  background-color: #334155;
  color: #cbd5e1;
}

.dark-mode .suggestion-item:active {
  background-color: #334155;
}

.dark-mode .action-icon {
    background-color: #334155;
    color: #cbd5e1;
}

.dark-mode .action-icon.delete {
    background-color: #450a0a;
    color: #f87171;
}

.dark-mode .dev-badge {
    background-color: #334155;
    color: #cbd5e1;
}

.dark-mode .gray-bg {
    background-color: #334155;
}

.dark-mode .blue-bg {
    background-color: #1e3a8a;
}

.icon-circle.gray {
  background-color: #f1f5f9;
}
.icon-circle.gray .action-icon {
  color: #64748b;
}
