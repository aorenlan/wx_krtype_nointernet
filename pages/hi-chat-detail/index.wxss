.page {
  min-height: 100vh;
  background: #f1f5f9;
  box-sizing: border-box;
}

.page.dark {
  background: #0b1220;
}

.empty {
  padding: 44px 22px;
  text-align: center;
}

.empty-title {
  display: block;
  font-size: 18px;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 10px;
}

.page.dark .empty-title {
  color: #f8fafc;
}

.empty-sub {
  display: block;
  font-size: 13px;
  color: #64748b;
  line-height: 1.6;
}

.page.dark .empty-sub {
  color: #94a3b8;
}

.content {
  padding: 12px 14px 22px;
  box-sizing: border-box;
}

.card {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 18px;
  padding: 14px 14px;
  border: 1px solid rgba(15, 23, 42, 0.06);
  box-shadow: 0 14px 40px rgba(15, 23, 42, 0.12);
  margin-bottom: 12px;
}

.page.dark .card {
  background: rgba(15, 23, 42, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.08);
  box-shadow: 0 14px 40px rgba(0, 0, 0, 0.24);
}

.card-title {
  display: block;
  font-size: 12px;
  font-weight: 900;
  color: #6366f1;
  margin-bottom: 8px;
}

.page.dark .card-title {
  color: #a5b4fc;
}

.card-text {
  display: block;
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  line-height: 1.7;
  word-break: break-all;
}

.page.dark .card-text {
  color: #f8fafc;
}

.card-sub {
  display: block;
  margin-top: 10px;
  font-size: 12px;
  color: #64748b;
  line-height: 1.6;
}

.page.dark .card-sub {
  color: #94a3b8;
}
