.page {
  height: 100vh;
  box-sizing: border-box;
  background: #f8fafc;
}

.header {
  padding: 0 32rpx 12rpx;
}

.header-row {
  display: flex;
  align-items: center;
}

.back-btn-simple {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
  margin-left: -16rpx;
  border-radius: 50%;
  background: #f1f5f9;
}

.back-btn-simple:active {
  background: #e2e8f0;
}

.back-btn-simple .back-icon {
  font-size: 40rpx;
  color: #334155;
  line-height: 1;
  padding-bottom: 4rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
}

.header-sub {
  margin-top: 4rpx;
  display: block;
  font-size: 24rpx;
  color: #64748b;
}

.content {
  display: flex;
  height: calc(100vh - 160rpx);
  position: relative;
}

/* 书籍风格侧边栏 */
.sidebar {
  width: 320rpx; /* 加宽侧边栏，容纳更多文字 */
  background: #f8fafc; /* 浅灰白背景 */
  box-sizing: border-box;
  transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1); /* 更自然的弹簧效果 */
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  z-index: 100;
  overflow: hidden;
  box-shadow: 8rpx 0 24rpx rgba(0,0,0,0.06);
  transform: translateX(0);
  border-radius: 0 24rpx 24rpx 0; /* 右侧圆角 */
}

.sidebar.collapsed {
  transform: translateX(-100%);
  width: 320rpx; 
}

/* 固定宽度的内部容器 */
.sidebar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
}

/* 遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(30,41,59,0.2); /* 深蓝灰色半透明 */
  backdrop-filter: blur(4px); /* 毛玻璃效果 */
  z-index: 90;
  transition: opacity 0.3s;
}

.sidebar-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx; /* 更高的高度 */
  padding: 0 32rpx;
  box-sizing: border-box;
  background: transparent;
  color: #334155;
}

/* 悬浮目录按钮（固定在右上角） */
.collapse-trigger-fixed {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 72rpx;
  height: 72rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 80;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  cursor: pointer;
  border: 1rpx solid #f1f5f9;
}

.collapse-trigger-fixed:active {
  background: #f8fafc;
  transform: scale(0.95);
}

.menu-icon {
  width: 32rpx;
  height: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.menu-icon .line {
  width: 100%;
  height: 4rpx;
  background: #64748b;
  border-radius: 2rpx;
}

.sidebar-title {
  font-size: 34rpx;
  color: #1e293b;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.sidebar-close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e2e8f0;
  border-radius: 50%;
  transition: all 0.2s;
}

.sidebar-close-btn:active {
  background: #cbd5e1;
  transform: rotate(90deg);
}

.sidebar-close-btn text {
  font-size: 32rpx;
  color: #64748b;
  font-weight: bold;
}

.sidebar-list {
  flex: 1;
  padding: 10rpx 20rpx 40rpx; /* 内缩，留出气泡边距 */
  box-sizing: border-box;
}

/* 气泡式目录项 */
.dir-item {
  position: relative;
  padding: 24rpx 24rpx;
  margin-bottom: 16rpx;
  color: #475569;
  background: #ffffff;
  border-radius: 20rpx; /* 大圆角 */
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

/* 选中项 - 高亮气泡 */
.dir-item.active {
  background: #eef2ff; /* 浅靛蓝背景 */
  color: #4f46e5; /* 深靛蓝文字 */
  font-weight: 600;
  border-color: #c7d2fe;
  box-shadow: 0 4rpx 12rpx rgba(99,102,241,0.08);
  transform: scale(1.02); /* 轻微放大 */
}

/* 选中项的左侧指示条 */
.dir-item.active::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #4f46e5;
}

.dir-item:active {
  transform: scale(0.98);
}

.dir-text {
  font-size: 28rpx;
  line-height: 1.5;
  padding-left: 10rpx; /* 为指示点留空 */
}

.main {
  flex: 1;
  padding: 24rpx 32rpx 40rpx;
  box-sizing: border-box;
  background: #ffffff;
  position: relative;
}

.main.full {
  padding: 24rpx 40rpx 40rpx;
}

/* 纸张效果 */
.card {
  background: #ffffff;
  min-height: 100%;
}

.card-title {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.grammar {
  font-size: 40rpx;
  font-weight: 700;
  color: #1e293b;
}

.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.chip {
  padding: 6rpx 16rpx;
  background: #f1f5f9;
  color: #475569;
  font-size: 24rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.body {
  font-size: 32rpx;
  line-height: 1.8;
  color: #334155;
}

.paragraph {
  margin-bottom: 24rpx;
  text-align: justify;
  word-wrap: break-word;
}

.empty {
  padding: 40rpx 0;
  color: #64748b;
  text-align: center;
}
