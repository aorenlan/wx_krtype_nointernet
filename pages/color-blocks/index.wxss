page {
  background-color: #f0f4f8;
}

.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1000;
  display: flex;
  align-items: flex-start;
  background-color: transparent;
}

.back-btn {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 5rpx solid #334155;
  border-bottom: 5rpx solid #334155;
  transform: rotate(45deg);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  flex: 1;
  text-align: center;
  margin-right: 80rpx;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

.tab-bar {
  display: flex;
  justify-content: center;
  background: white;
  padding: 10rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.tab-item {
  padding: 16rpx 34rpx;
  font-size: 28rpx;
  color: #64748b;
  border-radius: 16rpx;
  margin: 0 8rpx;
  font-weight: 600;
}

.tab-item.active {
  background: #eef2ff;
  color: #4f46e5;
}

.board {
  width: 92%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-9 {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 8rpx;
}

.grid-4 {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.size-toggle {
  display: flex;
  margin-bottom: 24rpx;
  background: #e2e8f0;
  padding: 8rpx;
  border-radius: 20rpx;
}

.size-opt {
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #64748b;
  font-weight: 600;
  border-radius: 14rpx;
}

.size-opt.active {
  background: white;
  color: #4f46e5;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.cell {
  width: 100%;
}

.cell-inner {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.06);
}

.cell-mask {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.86);
  opacity: 0;
  transform: scale(0.92);
  transition: opacity 160ms ease, transform 160ms ease;
}

.cell-mask.show {
  opacity: 1;
  transform: scale(1);
}

.cell-ko {
  font-size: 22rpx;
  font-weight: 800;
  color: #0f172a;
  text-align: center;
  padding: 0 8rpx;
}

.info-card {
  width: 100%;
  background: white;
  padding: 32rpx 26rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.korean-time-container {
  background-color: #f8fafc;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  width: 92%;
  margin-bottom: 20rpx;
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #e2e8f0;
}

.korean-time {
  font-size: 34rpx;
  color: #6366f1;
  font-weight: 700;
  text-align: center;
}

.control-row {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 10rpx;
}

.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #eef2ff;
  color: #4f46e5;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-icon:active {
  transform: scale(0.96);
  background: #e0e7ff;
}

.quiz-swatch {
  width: 220rpx;
  height: 220rpx;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.12);
  margin-bottom: 20rpx;
}

.quiz-title {
  font-size: 30rpx;
  color: #0f172a;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.quiz-input {
  width: 86%;
  height: 76rpx;
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 18rpx;
  font-size: 30rpx;
  text-align: center;
  color: #0f172a;
}

.quiz-feedback {
  margin-top: 18rpx;
  min-height: 56rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #94a3b8;
}

.quiz-feedback.ok {
  color: #16a34a;
}

.quiz-feedback.bad {
  color: #dc2626;
}

.audio-status {
  margin-top: 18rpx;
  color: #64748b;
  font-size: 26rpx;
  font-weight: 600;
}

.grid-3 {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
}

.opt {
  background: #ffffff;
  border: 2rpx solid #e2e8f0;
  border-radius: 22rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.opt:active {
  transform: scale(0.98);
}

.opt-swatch {
  width: 100%;
  height: 90rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 18rpx rgba(0,0,0,0.08);
}

.opt-text {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #0f172a;
  font-weight: 700;
}

/* Focused Overlay */
.focus-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2000;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 240ms ease;
}

.focus-overlay.show {
  opacity: 1;
  pointer-events: auto;
}

.focus-card {
  width: 500rpx;
  background: white;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.8);
  transition: transform 300ms cubic-bezier(0.34, 1.56, 0.64, 1);
}

.focus-overlay.show .focus-card {
  transform: scale(1);
}

.focus-swatch {
  width: 320rpx;
  height: 320rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.focus-ko {
  font-size: 64rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.focus-hint {
  font-size: 26rpx;
  color: #94a3b8;
}
