.filter-switch {
  display: flex;
  align-items: center;
  background: rgba(0,0,0,0.05);
  padding: 4px 8px;
  border-radius: 12px;
  margin-right: 8px;
}

.filter-label {
  font-size: 12px;
  font-weight: 600;
  color: #334155;
  margin-right: 4px;
}

.filter-icon {
  font-size: 14px;
  color: #64748b;
}

.controls-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16px;
}

.tab-bar {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 12px 0 8px;
  background: transparent;
}

.sort-bar {
  display: flex;
  align-items: center;
  padding-top: 4px;
}

.sort-item {
  font-size: 13px;
  color: #94a3b8;
  padding: 4px;
  font-weight: 500;
  transition: all 0.3s;
}

.sort-item.active {
  color: #6366f1;
  font-weight: 700;
}

.sort-divider {
  color: #cbd5e1;
  font-size: 11px;
  margin: 0 4px;
}

.tab-item {
  padding: 8px 24px;
  font-size: 15px;
  font-weight: 600;
  color: #94a3b8;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #6366f1;
  font-weight: 800;
  font-size: 16px;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 3px;
  background: #6366f1;
  border-radius: 2px;
}

.page {
  min-height: 100vh;
  background: #f8fafc;
  box-sizing: border-box;
}

.page.dark {
  background: #0f172a;
}

/* Header Info */
.course-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 20px;
  background: #ffffff;
  margin-bottom: 2px;
}

.course-info {
  display: flex;
  align-items: center;
}

.course-label {
  font-size: 14px;
  color: #64748b;
  font-weight: 600;
  margin-right: 8px;
}

.course-value {
  font-size: 14px;
  color: #6366f1;
  font-weight: 800;
  background: rgba(99, 102, 241, 0.1);
  padding: 4px 10px;
  border-radius: 6px;
}

.rules-btn {
  display: flex;
  align-items: center;
  padding: 4px 10px;
  background: #f1f5f9;
  border-radius: 16px;
}

.rules-btn text {
  font-size: 12px;
  color: #64748b;
  font-weight: 500;
}

.rules-btn .icon-info {
  margin-left: 4px;
  font-size: 12px;
}

/* Search Bar */
.search-bar {
  padding: 8px 16px 12px;
  background: transparent;
}

.search-wrap {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20px;
  padding: 8px 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.02);
  border: 1px solid #e2e8f0;
}

.search-input {
  flex: 1;
  font-size: 14px;
  color: #334155;
  margin-left: 8px;
}

.search-placeholder {
  color: #cbd5e1;
}

.clear-btn {
  padding: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Story List */
.story-list {
  padding-bottom: 100px;
}

.story-list-padding {
  padding: 16px;
}

.story-card {
  background: #ffffff;
  border-radius: 16px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
  border: 1px solid #f1f5f9;
  transition: all 0.2s ease;
}

.story-card:active {
  transform: scale(0.98);
  background: #f8fafc;
}

.card-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.header-left {
  display: flex;
  align-items: center;
}

.card-time {
  font-size: 12px;
  color: #94a3b8;
  font-weight: 500;
}

.card-source {
  font-size: 12px;
  color: #6366f1;
  background: rgba(99, 102, 241, 0.1);
  padding: 2px 6px;
  border-radius: 4px;
  margin-left: 8px;
  font-weight: 600;
}

.header-right {
  display: flex;
  align-items: center;
}

.view-count-wrap {
  display: flex;
  align-items: center;
  background: #f8fafc;
  padding: 2px 8px;
  border-radius: 12px;
}

.icon-eye {
  width: 14px;
  height: 14px;
  opacity: 0.5;
  margin-right: 4px;
}

.view-count-num {
  font-size: 12px;
  color: #64748b;
  font-weight: 600;
}

.card-title-main {
  font-size: 16px;
  color: #1e293b;
  font-weight: 700;
  line-height: 1.5;
}

.highlight-who {
  color: #6366f1;
}

/* Empty State */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 80px;
  opacity: 0.6;
}

.empty-title {
  font-size: 16px;
  font-weight: 600;
  color: #64748b;
  margin-bottom: 8px;
}

.empty-sub {
  font-size: 13px;
  color: #94a3b8;
  max-width: 240px;
  text-align: center;
  line-height: 1.5;
}

/* FAB */
.fab-btn {
  position: fixed;
  bottom: 120px; /* above tabbar */
  right: 24px;
  width: 56px;
  height: 56px;
  background: #6366f1;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
}

.fab-btn:active {
  transform: scale(0.9) rotate(90deg);
  background: #4f46e5;
}

.fab-icon {
  font-size: 32px;
  color: #ffffff;
  font-weight: 300;
  margin-top: -4px;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
}

.modal-content {
  width: 80%;
  max-width: 320px;
  background: #ffffff;
  border-radius: 24px;
  padding: 24px;
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  animation: modalPop 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes modalPop {
  from { opacity: 0; transform: scale(0.9); }
  to { opacity: 1; transform: scale(1); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-title {
  font-size: 18px;
  font-weight: 800;
  color: #0f172a;
}

.close-btn {
  font-size: 24px;
  color: #94a3b8;
  line-height: 1;
  padding: 4px;
}

.modal-body {
  max-height: 360px;
}

.rule-item {
  display: flex;
  margin-bottom: 20px;
}

.rule-icon {
  font-size: 24px;
  margin-right: 12px;
  padding-top: 2px;
}

.rule-text {
  flex: 1;
}

.rule-title {
  display: block;
  font-size: 15px;
  font-weight: 700;
  color: #334155;
  margin-bottom: 4px;
}

.rule-desc {
  font-size: 13px;
  color: #64748b;
  line-height: 1.5;
}

.rule-footer-tip {
  text-align: center;
  font-size: 13px;
  color: #6366f1;
  font-weight: 600;
  margin-top: 8px;
  margin-bottom: 16px;
}

.modal-btn {
  width: 100%;
  background: #6366f1;
  color: white;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 600;
  padding: 12px 0;
  margin-top: 8px;
}

.modal-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}
