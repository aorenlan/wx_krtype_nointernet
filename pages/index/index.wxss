/* Container & Common */
.container {
  min-height: 100vh;
  background-color: #0f172a; /* slate-900 */
  color: #f8fafc; /* slate-50 */
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* Decorative Background */
.deco-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.deco-shape {
  position: absolute;
  opacity: 0.03;
}

.deco-shape.top-right {
  top: -40px;
  right: -128px;
  transform: rotate(12deg) scale(1.5);
}

.deco-shape.bottom-left {
  bottom: -80px;
  left: -128px;
  transform: rotate(-12deg) scale(1.25);
}

.deco-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  padding: 16px;
  background-color: #94a3b8; /* slate-400 */
  border-radius: 24px;
  width: 800px;
}

.deco-key {
  width: 70px; /* approx grid column */
  height: 80px;
  background-color: #e2e8f0; /* slate-200 */
  border-radius: 12px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

/* Navbar */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
  box-sizing: border-box;
  padding: 0 16px;
}

.nav-content {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 8px 0;
}

.back-icon-box {
  width: 32px;
  height: 32px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.back-icon-img {
  width: 20px;
  height: 20px;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #e2e8f0;
}

/* Fade In Animation */
.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Menu Mode */
.menu-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 20px 32px; /* Reduced top padding from 40px to 20px */
  position: relative;
  z-index: 1;
  overflow-y: auto;
}

.header-section {
