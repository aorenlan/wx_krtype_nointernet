/* iPad / Tablet / Foldable Adaptation */
@media (min-width: 500px) {
  /* Global "Phone Mode" Constraint */
  page {
    height: 100vh; /* Fixed viewport height */
    background-color: #000000;
    display: flex;
    justify-content: center; /* Center horizontally */
    align-items: flex-start; /* Align top */
    overflow: hidden; /* Prevent page-level scroll */
    padding-top: 0;
  }

  .container {
    width: 480px; /* Standard large phone width */
    max-width: none;
    height: 100vh; /* Full viewport height */
    margin: 0;
    position: relative;
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    background: #0f172a;
    box-shadow: none;
    border-radius: 0;
    overflow: hidden; 
    display: flex;
    flex-direction: column;
    
    /* NO SCALE - Native Adaptation */
    transform: none;
  }

  /* Fix Nav Bar centering relative to the viewport/container */
  .nav-bar {
    position: absolute; /* Absolute within container */
    top: 0;
    left: 0;
    transform: none; /* No transform needed */
    max-width: 100%;
    width: 100%;
    z-index: 100;
  }

  /* Menu Mode Specifics - Compact for "Show All" */
  .menu-container {
    height: 100%;
    overflow-y: hidden; /* Disable scrolling to force fit */
    padding: 70px 24px 10px 24px; /* Normal padding */
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Strictly top aligned */
    gap: 12px; /* Consistent gap */
  }

  .header-section {
    margin-bottom: 0; /* Let gap handle spacing */
    flex-shrink: 0;
  }
  
  .badge {
    margin-bottom: 4px;
    font-size: 11px;
    padding: 3px 10px;
  }

  .main-title {
    font-size: 32px; 
    margin-bottom: 4px;
  }
  
  .sub-title-box {
    margin-top: 4px;
  }
  
  .slogan-line {
    font-size: 14px;
  }

  .menu-list {
    gap: 10px; 
    flex-shrink: 1; /* Allow shrinking */
    min-height: 0;
    overflow-y: auto; /* Allow internal scroll only if absolutely necessary */
  }

  .menu-item {
    min-height: 70px; /* Compact height */
    padding: 12px;
  }
  
  .menu-text {
    font-size: 16px;
  }
  
  .menu-sub {
    font-size: 11px;
  }
  
  .menu-icon {
    width: 32px;
    height: 32px;
    font-size: 20px;
    bottom: 10px;
    right: 10px;
  }

  .action-grid {
    margin-top: 10px;
    flex-shrink: 0;
  }
  
  .custom-entry .menu-item,
  .pc-entry .menu-item {
    min-height: 60px;
  }

  .footer {
    padding: 10px 0;
    margin-top: 0;
    flex-shrink: 0;
  }

  /* Typing Mode Specifics */
  .typing-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow: hidden; /* No scroll for typing mode */
    align-items: center;
    width: 100%;
    padding-top: 50px; /* Space for nav bar */
  }

  /* Remove previous specific max-widths since container is constrained */
  .menu-list, 
  .action-grid,
  .header-section,
  .footer,
  .status-bar,
  .display-area,
  .keyboard-wrapper,
  .ad-container,
  .card {
    max-width: 100%;
  }

  /* Typing Mode - Compact Vertical Layout */
  .ad-container {
    margin-bottom: 4px;
    flex-shrink: 0;
    transform: none; /* Reset transform */
  }

  .status-bar {
    margin-bottom: 4px;
    padding: 0 10px;
    flex-shrink: 0;
    width: 100%;
    box-sizing: border-box;
  }

  .display-area {
    margin-bottom: 4px;
    padding: 0 10px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Strictly top aligned */
    min-height: 0; /* Allow shrinking */
    gap: 0;
  }

  .translation-container {
    margin-bottom: 10px;
    gap: 6px;
  }

  .translation {
    font-size: 15px; 
  }

  .text-scroll-wrapper {
    height: 90px; 
    margin-bottom: 10px;
  }

  /* Override rpx with px to prevent excessive scaling on wide screens */
  .char-block {
    font-size: 40px; /* Fixed px size */
    width: 40px;
    margin: 0 2px;
  }

  .space-active {
    width: 40px;
    height: 30px;
    border-bottom-width: 3px;
  }

  .jamo-hint-container {
    height: 50px;
    margin-bottom: 0;
  }

  .jamo-hint-box {
    padding: 4px 16px;
    min-height: 36px;
    border-radius: 12px;
  }

  .jamo-char {
    font-size: 20px;
  }

  .jamo-hint-placeholder {
    font-size: 16px;
    line-height: 24px;
  }

  .mode-toggle {
    width: 36px;
    height: 36px;
    font-size: 10px;
  }
  
  .keyboard-wrapper {
    flex-shrink: 0; /* Ensure keyboard doesn't shrink */
    width: 100%;
  }

  /* Custom Input Mode */
  .custom-container {
    height: 100%;
    overflow-y: auto; /* Allow scroll here as form might be long */
    padding-top: 60px;
  }

  .card {
    padding: 24px;
  }
  
  .custom-textarea {
    height: 120px;
  }
}

